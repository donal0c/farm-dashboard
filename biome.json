{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!.beads", "!output", "!.next", "!node_modules"]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
